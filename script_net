#---------------------------------------------------------------------------------start---------------------------------------------------------------------------------------


PID="$(ps -a | grep $1 | grep -Eo "[0-9]*" | head -1)"


> all_net_stats


for ((i=1; i<=600; i++))
do
    VAR_STATE="$(sudo netstat -sp $PID | head -n 9 | grep -E 'received|sent' | cut -d' ' -f5)";
    echo $VAR_STATE >> all_net_stats  
  sleep 0.5
done

#-----------------------------------------------------------------------------------end------------------------------------------------------------------------------------------

